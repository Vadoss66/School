<UserControl x:Class="School.View.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:School.View"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <StackPanel Margin="20">
        <Label Content="Login"></Label>
        <TextBox></TextBox>
        <Label Content="Pass"></Label>
        <PasswordBox></PasswordBox>
        <DockPanel Margin="0,10">
            <Button HorizontalAlignment="Left" Content="Войти"></Button>
            <Button HorizontalAlignment="Right" Content="?" Width="20"></Button>
        </DockPanel>
    </StackPanel>
</UserControl>
